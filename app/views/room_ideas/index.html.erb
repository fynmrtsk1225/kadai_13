<p id="notice"><%= notice %></p>

<h1>Room Ideas</h1>

<br>
<br>

<table class="all_room_idea">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Color</th>
      <th>Width</th>
      <th>Depth</th>
      <th>Height</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_ideas.each do |room_idea| %>
      <tr>
        <% if room_idea.image.file == nil %>
          <td><%= image_tag 'sample.png', size: '200x200' %></td>
        <% else %>
          <td><%= image_tag room_idea.image.url %></td>
        <% end %>
        <td><%= room_idea.name %></td>
        <td><%= room_idea.color %></td>
        <td><%= "#{room_idea.width}cm" %></td>
        <td><%= "#{room_idea.depth}cm" %></td>
        <td><%= "#{room_idea.height}cm" %></td>
        <td><%= room_idea.content %></td>
        <td><%= link_to 'Show', room_idea, {class: "button001"}  %></td>
        <td><%= link_to 'Edit', edit_room_idea_path(room_idea), {class: "button001"} %></td>
        <td><%= link_to 'Destroy', room_idea, {method: :delete, data: { confirm: 'Are you sure?' }, class: "button001"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>