<h1>ルームアイデア一覧</h1>

<br>
<br>

<table class="all_room_idea">
  <thead>
    <tr>
      <th>画像</th>
      <th>欲しいもの</th>
      <th>カラー</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_ideas.each do |room_idea| %>
      <tr>
        <% if room_idea.image.file == nil %>
          <td><%= image_tag 'sample.png', size: '200x200' %></td>
        <% else %>
          <td><%= image_tag room_idea.image.url %></td>
        <% end %>
        <td><%= room_idea.name %></td>
        <td><%= room_idea.color %></td>
        <td><%= link_to '詳細', room_idea, {class: "button001"}  %></td>
        <td><%= link_to '編集', edit_room_idea_path(room_idea), {class: "button001"} %></td>
        <td><%= link_to '削除', room_idea, {method: :delete, data: { confirm: '削除してもいいですか?' }, class: "button001"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>