<p id="notice"><%= notice %></p>

<h1>Room Ideas</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Color</th>
      <th>Width</th>
      <th>Depth</th>
      <th>Height</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_ideas.each do |room_idea| %>
      <tr>
        <td><%= image_tag room_idea.image.url %></td>
        <td><%= room_idea.name %></td>
        <td><%= room_idea.color %></td>
        <td><%= room_idea.width %></td>
        <td><%= room_idea.depth %></td>
        <td><%= room_idea.height %></td>
        <td><%= room_idea.content %></td>
        <td><%= link_to 'Show', room_idea %></td>
        <td><%= link_to 'Edit', edit_room_idea_path(room_idea) %></td>
        <td><%= link_to 'Destroy', room_idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

