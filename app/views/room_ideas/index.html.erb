<p id="notice"><%= notice %></p>

<h1>Room Ideas</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_ideas.each do |room_idea| %>
      <tr>
        <td><%= room_idea.user_id %></td>
        <td><%= link_to 'Show', room_idea %></td>
        <td><%= link_to 'Edit', edit_room_idea_path(room_idea) %></td>
        <td><%= link_to 'Destroy', room_idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room Idea', new_room_idea_path %>
