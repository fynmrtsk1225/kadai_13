<div class="account_box">
  <div class="tag">
    <%= form_with(model: tag, local: true) do |form| %>
      <% if tag.errors.any? %>
        <div class="error_explanation_original">
          <h2><%= tag.errors.count %> 件のエラーが発生したため タグ は保存されませんでした。</h2>

          <ul>
            <% tag.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.text_field :name, placeholder: "タグ名" %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>