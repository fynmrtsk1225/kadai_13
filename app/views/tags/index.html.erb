<h1>タグ一覧</h1>

<%= link_to '新規タグ投稿', new_tag_path %>

<br><br>

<table class="all_room_idea">
  <thead>
    <tr>
      <th>タグ名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to '編集', edit_tag_path(tag) %></td>
        <td><%= link_to '削除', tag, method: :delete, data: { confirm: '削除してもいいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'トップへ戻る', tags_path %>
