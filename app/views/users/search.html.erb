<h1>検索結果</h1>
<table>
  <thead>
    <tr>
      <th>Icon</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |user| %>
      <tr id="user_<%= user.id %>">
        <%= render 'user', user: user %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Users', users_path %>