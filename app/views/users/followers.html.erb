<h1>フォロワー</h1>

<h3>ユーザー検索</h3>

<%= search_form_for @user_q, url: search_users_path do |f| %>
  <%= f.search_field :name_cont, placeholder: "ユーザー名"  %>
  
  <%= f.submit '検索' %>
<% end %>

<br>

<table class="all_room_idea">
  <thead>
    <tr>
      <th>アイコン</th>
      <th>ユーザ名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr id="user_<%= user.id %>">
        <%= render 'user', user: user %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'プロフィールに戻る', user_path(@user) %>