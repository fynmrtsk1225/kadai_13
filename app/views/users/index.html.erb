<h1>Users</h1>

<h3>ユーザー検索</h3>

<%= search_form_for @user_q, url: search_users_path do |f| %>
  <%= f.label :name_cont, 'User Name' %>
  <%= f.search_field :name_cont %>
  
  <%= f.submit '検索' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Icon</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.profile.image.url %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user %></td>
        <% if current_user != user %>
        <% if user.followed_by?(current_user) %>
          <td>フォロー中 <%=link_to "解除", user_relationships_path(user.id), method: :delete %></td>
        <% else %>
            <td><%=link_to "フォロー", user_relationships_path(user.id), method: :post %></td>
        <% end %>
    <% end %>
      </tr>
    <% end %>
  </tbody>
</table>