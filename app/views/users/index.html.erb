<h1>Users</h1>

<h3>ユーザー検索</h3>
<%= search_form_for @q, url: search_users_path do |f| %>
  <%= f.label :name_cont, 'User' %>
  <%= f.search_field :name_cont %>

  <%= f.submit '検索' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Icon</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.profile.image.url %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>