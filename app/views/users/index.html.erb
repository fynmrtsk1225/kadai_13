<h1>全ユーザ一覧</h1>

<h3>ユーザー検索</h3>

<%= search_form_for @user_q, url: search_users_path do |f| %>
  <%= f.search_field :name_cont, placeholder: "ユーザー名" %>
  
  <%= f.submit '検索' %>
<% end %>

<section class="all_pictures_main">
  <table>
    <tbody class="picture">
      <% @users.each do |user| %>
        <tr id="user_<%= user.id %>">
          <%= render 'user', user: user %>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>