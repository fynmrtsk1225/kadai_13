<h1>検索結果</h1>

<%= link_to 'Top',  products_path %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Image</th>
      <th>Name</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |product| %>
      <tr>
        <td><%= product.picture.user.name %></td>
        <% if product.image.file == nil %>
          <td><%= image_tag 'sample.png', size: '200x200' %></td>
        <% else %>
          <td><%= image_tag product.image.url %></td>
        <% end %>
        <td><%= product.name %></td>
        <td><%= link_to "販売情報", "#{product.product_url}", target: :_blank %></td>
        <td><%= link_to 'Show', product %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Top',  products_path %>