<h1>検索結果</h1>

<%= link_to 'Top',  products_path %>

<table class="all_product">
  <thead>
    <tr>
      <th>アイコン</th>
      <th>ユーザー名</th>
      <th>画像</th>
      <th>商品名</th>
      <th>商品詳細URL</th>
      <th>画像URL</th>
      <th>お気に入り</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |product| %>
      <tr id="product_<%= product.id %>">
        <%= render 'product', product: product %>
      </tr>
    <% end %>
  </tbody>
</table>

