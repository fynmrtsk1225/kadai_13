<h1>Products</h1>

<h3>商品検索</h3>

<%= search_form_for @product_q, url: search_products_path do |f| %>
  <%= f.label :name_cont, 'Product Name' %>
  <%= f.search_field :name_cont %>
  
  <%= f.submit '検索' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Image</th>
      <th>Name</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.picture.user.name %></td>
        <% if product.image.file == nil %>
          <td><%= image_tag 'sample.png', size: '200x200' %></td>
        <% else %>
          <td><%= image_tag product.image.url %></td>
        <% end %>
        <td><%= product.name %></td>
        <td><%= link_to "販売情報", "#{product.product_url}", target: :_blank %></td>
        <td><%= link_to 'Show', product %></td>
        <% if current_user.favorited_product_by?(picture.id) %>
          <td>いいねを外す</td>
        <% else %>
          <td>いいね</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

