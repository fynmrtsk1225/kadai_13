<h1>Products</h1>

<h3>商品検索</h3>

<%= search_form_for @product_q, url: search_products_path do |f| %>
  <%= f.search_field :name_cont, placeholder: "商品名" %>
  
  <%= f.submit '検索' %>
<% end %>

  <br>

<table class="all_product">
  <thead>
    <tr>
      <th>アイコン</th>
      <th>ユーザー名</th>
      <th>画像</th>
      <th>商品名</th>
      <th>商品詳細URL</th>
      <th>画像URL</th>
      <th>お気に入り</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr id="product_<%= product.id %>">
        <%= render 'product', product: product %>
      </tr>
    <% end %>
  </tbody>
</table>