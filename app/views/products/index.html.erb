<h1>Products</h1>

<h3>商品検索</h3>

<%= search_form_for @product_q, url: search_products_path do |f| %>
  <%= f.label :name_cont, 'Product Name' %>
  <%= f.search_field :name_cont %>
  
  <%= f.submit '検索' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>icon</th>
      <th>User</th>
      <th>Image</th>
      <th>Name</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr id="product_<%= product.id %>">
        <%= render 'product', product: product %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

