<h1>お気に入り商品</h1>

<table class="all_room_idea">
  <thead>
    <tr>
      <th>アイコン</th>
      <th>ユーザー名</th>
      <th>画像</th>
      <th>商品名</th>
      <th>商品詳細URL</th>
      <th>画像URL</th>
      <th>お気に入り</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_products.each do |product| %>
      <tr id="product_<%= product.id %>">
        <%= render '/products/product', product: product %>
      </tr>
    <% end %>
  </tbody>
</table>

