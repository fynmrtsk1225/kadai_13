<td><%= image_tag picture.user.profile.image.url %></td>
<td><%= link_to "#{picture.user.name}", user_path(picture.user.id) %></td>
<td><%= image_tag picture.image.url %></td>
<td><%= picture.content %></td>
<% if current_user.favorited_picture_by?(picture.id) %>
  <td><div class="heart"><%= link_to image_tag('icon_heart_on.PNG', size: '40x40'), destroy_favorite_picture_path(picture), method: :DELETE, remote: true %></div></td>
<% else %>
  <td><div class="heart"><%= link_to image_tag('icon_heart_off.PNG', size: '40x40'), create_favorite_picture_path(picture), method: :POST, remote: true %></div></td>
<% end %>
