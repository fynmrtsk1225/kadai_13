<h1>Show</h1>

<div id="picture_<%= @picture.id %>">
  <%= render 'picture', picture: @picture %>
  <br>
  <%= @picture.content %>
</div>

<% if @picture.user == current_user %>
  <%= link_to 'Edit', edit_picture_path(@picture) %> |
  <%= link_to 'Destroy', @picture, method: :delete, data: { confirm: 'Are you sure? '} %> |
<% else %>
  <td></td>
  <td></td>
<% end %>