<div class="nested-fields">
<label class="control-label"><h3>+</h3></label>
  <%= f.hidden_field :id %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_area :name, placeholder: "例）ペンダントランプ" %>
  </div>

  <div class="field">
    <%= f.label :product_url %>
    <%= f.text_field :product_url, placeholder: "例）https://***" %>
  </div>

  <div class="field">
    <%= f.label :image_url %>
    <%= f.text_field :image_url, placeholder: "例）https://***" %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>

  <%= link_to_remove_association "削除", f %>

</div>