<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<h3>ユーザー検索</h3>

<%= search_form_for @picture_q, url: search_pictures_path do |f| %>
  <%= f.label :tags_id_eq, 'Tags Name' %>
  <%= f.collection_select :tags_id_eq, @tags, :id, :name, include_blank: 'タグ選択' %>
  
  <%= f.submit '検索' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= image_tag picture.image.url %></td>
        <td><%= picture.content %></td>
        <td><%= picture.user.name %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
