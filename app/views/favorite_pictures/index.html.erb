<h1>Favorites</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_pictures.each do |picture| %>
      <tr id="picture_<%= picture.id %>">
        <%= render '/pictures/picture', picture: picture %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'All Picture', pictures_path %>