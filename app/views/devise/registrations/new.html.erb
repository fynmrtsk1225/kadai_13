<div class="account" style="background:url(<%= asset_path 'sign_up.png' %>); background-size:cover; background-position:center bottom; height: 725px;">
  <div class="account_box">
    <h2><%= t('.sign_up') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.fields_for :profile do |f| %>
        <div class="field">
          <%= f.label :image, class: "required" %>
          <%= f.file_field :image %>
          <%= f.hidden_field :image_cache %>
        </div>
      <% end %>

      <div class="sign_up_field">
        <%= f.label :name, class: "required" %>
        <%= f.text_field :name, autofocus: true, placeholder: "Name" %>
      </div>

      <div class="sign_up_field">
        <%= f.label :email, class: "required" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "xxxx@xxx.com" %>
      </div>

      <div class="sign_up_field">
        <%= f.label :password, class: "required" %>
        <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
      </div>

      <div class="sign_up_field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認用" %>
      </div>

      <br>

      <div class="actions">
        <%= f.submit t('.sign_up') %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

    <h4>ゲストログインはこちら</h4>
    <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %> |
    <%= link_to '管理者ログイン（管理用）', users_admin_guest_sign_in_path, method: :post %>

  </div>
</div>